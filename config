#!/usr/bin/env bash
_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export COCKROACH_IMAGE=${COCKROACH_IMAGE:="$(awk -F '[ :]' '{print $2}' "${_DIR}/Dockerfile")"}
export COCKROACH_IMAGE_VERSION=${COCKROACH_IMAGE_VERSION:="$(awk -F '[ :]' '{print $3}' "${_DIR}/Dockerfile")"}
export COCKROACH_IMAGE_FOSS="dokku/cockroach"
export COCKROACH_IMAGE_FOSS_VERSION="v22.1.0"
export COCKROACH_FOSS_ENABLED=${COCKROACH_FOSS_ENABLED:="false"}
export COCKROACH_ROOT=${COCKROACH_ROOT:="$DOKKU_LIB_ROOT/services/cockroach"}
export DOKKU_LIB_HOST_ROOT=${DOKKU_LIB_HOST_ROOT:=$DOKKU_LIB_ROOT}
export COCKROACH_HOST_ROOT=${COCKROACH_HOST_ROOT:="$DOKKU_LIB_HOST_ROOT/services/cockroach"}

export CR_HAPROXY_IMAGE=haproxy
export CR_HAPROXY_IMAGE_VERSION=3.1.7

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=()
export PLUGIN_COMMAND_PREFIX="cockroach"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$COCKROACH_ROOT
export PLUGIN_DATA_HOST_ROOT=$COCKROACH_HOST_ROOT
export PLUGIN_DATASTORE_PORTS=(26257 8080)
export PLUGIN_DATASTORE_WAIT_PORT=26257
export PLUGIN_DEFAULT_ALIAS="DATABASE"
export PLUGIN_DISABLE_PULL=${COCKROACH_DISABLE_PULL:=}
export PLUGIN_DISABLE_PULL_VARIABLE="COCKROACH_DISABLE_PULL"
export PLUGIN_ALT_ALIAS="DOKKU_COCKROACH"

export PLUGIN_IMAGE=$COCKROACH_IMAGE
export PLUGIN_IMAGE_VERSION=$COCKROACH_IMAGE_VERSION

if [[ "$COCKROACH_FOSS_ENABLED" == "true" ]]; then
  export PLUGIN_IMAGE=$COCKROACH_IMAGE_FOSS
  export PLUGIN_IMAGE_VERSION=$COCKROACH_IMAGE_FOSS_VERSION
fi
export PLUGIN_SCHEME="postgres"
export PLUGIN_SERVICE="Cockroach"
export PLUGIN_VARIABLE="COCKROACH"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
export PLUGIN_CONFIG_SUFFIX="data"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

export PLUGIN_BUSYBOX_IMAGE=${PLUGIN_BUSYBOX_IMAGE:=busybox:1.37.0-uclibc}
export PLUGIN_AMBASSADOR_IMAGE=${PLUGIN_AMBASSADOR_IMAGE:=dokku/ambassador:0.8.2}
export PLUGIN_S3BACKUP_IMAGE=${PLUGIN_S3BACKUP_IMAGE:=dokku/s3backup:0.18.0}
export PLUGIN_WAIT_IMAGE=${PLUGIN_WAIT_IMAGE:=dokku/wait:0.9.3}

export COCKROACH_CONFIG_OPTIONS=${COCKROACH_CONFIG_OPTIONS:=""}
